<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>true</ImplicitUsings>
		<IsPackable>true</IsPackable>

		<Authors>Pablo Belin</Authors>
		<Title>Blazor.HighlightJS</Title>
		<Description>Simple Blazor class library exposing highlight.js.</Description>
		<Copyright>Copyright (c) 2022 Pablo Belin</Copyright>
		<PackageTags>dotnet;dotnetcore;csharp;blazor;server;wasm</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/pablofrommars/Blazor.HighlightJS</PackageProjectUrl>
		<RepositoryUrl>https://github.com/pablofrommars/Blazor.HighlightJS</RepositoryUrl>

		<Version>1.0.0</Version>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0" />
		<PackageReference Include="Microsoft.JSInterop" Version="6.0.0" />
	</ItemGroup>

</Project>